# Worxed Stream Manager - Backend Configuration
# Copy this file to .env and fill in your values

# ===========================================
# TWITCH APPLICATION (Required)
# Get these from https://dev.twitch.tv/console
# ===========================================
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here

# ===========================================
# OAUTH TOKENS (Required)
# Generate using: npm run setup
# ===========================================
TWITCH_OAUTH_TOKEN=your_oauth_token_here
TWITCH_REFRESH_TOKEN=your_refresh_token_here

# ===========================================
# CHANNEL CONFIG (Required)
# ===========================================
TWITCH_CHANNEL=your_twitch_username
TWITCH_BOT_USERNAME=your_twitch_username

# ===========================================
# SERVER CONFIG
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# WEBHOOKS (Optional - for EventSub)
# ===========================================
WEBHOOK_URL=https://your-domain.com/webhooks/twitch
TWITCH_WEBHOOK_SECRET=generate_a_random_secret

# ===========================================
# STREAMELEMENTS (Optional - enhanced features)
# Get from https://streamelements.com/dashboard/account/channels
# ===========================================
STREAMELEMENTS_CHANNEL_ID=your_channel_id
